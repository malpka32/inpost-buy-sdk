{
    "name": "malpka32/inpost-buy-sdk",
    "version": "0.2.0",
    "description": "PHP client for InPost Buy (inpsa) API",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "malpka32\\InPostBuySdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "malpka32\\InPostBuySdk\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "ramsey/collection": "^2.0",
        "symfony/http-client-contracts": "^2.5 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "fakerphp/faker": "^1.23",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html build/coverage/html --coverage-clover build/coverage/clover.xml",
        "phpstan": "phpstan analyse -c phpstan.neon.dist",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "ci": [
            "@phpstan",
            "@cs-check",
            "@test"
        ]
    }
}
